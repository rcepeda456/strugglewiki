<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <ImageView
        android:id="@+id/gameImg"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:paddingVertical="20dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/kingdomhearts"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_toRightOf="@+id/gameImg"
        android:paddingLeft="10dp"
        android:text="Struggle Emblem"
        android:textSize="25sp"
        android:paddingVertical="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gameImg"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/title"
        />

    <TextView
        android:id="@+id/publisher"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_toRightOf ="@+id/gameImg"
        android:layout_below ="@id/date"
        android:text="Struggle Productions"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_toRightOf="@+id/gameImg"
        android:layout_below ="@+id/publisher"
        android:text="Action, Adventure, Drama, Cooking, Racing"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/console"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_toRightOf="@+id/gameImg"
        android:layout_below="@+id/category"
        android:text="PS4, XBOX1, SWITCH"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/console"
        android:paddingTop="20dp">
        <TextView
        android:id="@+id/description"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:paddingVertical="10dp"
        android:text="@string/dummy_text"
        />
    </ScrollView>


</RelativeLayout>